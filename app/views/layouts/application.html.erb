<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <% if current_user %>
      <li><%= link_to "Home", user_path(current_user) %></li>
      <% else %>
      <li><%= link_to "Home", root_path %></li>
      <% end %>
      <li><%= link_to "About", about_path %></li>
      <div class="pull-right user-info">
        <% if current_user %>
        <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
        <div class="pull-right">
          <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
        </div>
        <% else %>
        <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> or
        <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
      </ul>


      <%= yield %>
    </div>
  </div>

</body>
</html>
