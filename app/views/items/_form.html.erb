<h4>Add a todo!</h4>
<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'form-control', placeholder: "What do you need to do?" %>
    </div>
  </div>
<%= f.submit "Do it", class: 'btn btn-success' %>
<% end %>
