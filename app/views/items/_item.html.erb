<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
  <div class="media">
    <div class="media-body">
      <% if user_is_authorized_for_item?(item) %>
       <%= link_to "", [item.user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>&nbsp;
      <% end %>
      <%= item.name %> | <strong><%= distance_of_time_in_words(Time.now, item.created_at.to_date + 7.days) %> left!</strong>
    </div>
  </div>
<% end %>
